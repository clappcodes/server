{
  "name": "@clapp/server",
  "version": "1.0.2",
  "license": "MIT",
  "exports": {
    ".": "./lib/main.js",
    "./props": "./lib/props.js",
    "./state": "./lib/state.js",
    "./run": "./lib/run.js",
    "./app": "./lib/app.js"
  },
  "scripts": {
    "esbuild:build": "node ./esbuild.mjs",
    "esbuild:watch": "node ./esbuild.mjs --watch",
    "node:watch": "node --enable-source-maps --watch lib/main.js",
    "tsc:dts": "tsc -d --emitDeclarationOnly",
    "tsc:dts:watch": "tsc --emitDeclarationOnly --watch",
    "build": "npm run esbuild:build && npm run tsc:dts",
    "dev": "npm run esbuild:watch && npm run tsc:dts:watch"
  },
  "devDependencies": {
    "@types/node": "^20.10.2",
    "esbuild": "0.19.8",
    "typescript": "^5.3.2"
  }
}